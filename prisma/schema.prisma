generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Actor {
  id    Int     @id @default(autoincrement())
  name  String
  Movie Movie[]
}

model Avaliations {
  id         Int   @id @default(autoincrement())
  userId     Int
  movieId    Int
  assessment Int
  Movie      Movie @relation(fields: [movieId], references: [id])
  User       User  @relation(fields: [userId], references: [id])
}

model Movie {
  id          Int           @id @default(autoincrement())
  userId      Int
  imagePoster String
  title       String
  description String
  director    String
  gender      String
  yearLaunch  Int
  Avaliations Avaliations[]
  User        User          @relation(fields: [userId], references: [id])
  Actor       Actor[]
}

model User {
  id          Int           @id @default(autoincrement())
  username    String
  email       String
  password    String
  isAdmin     Boolean
  Avaliations Avaliations[]
  Movie       Movie[]
}
